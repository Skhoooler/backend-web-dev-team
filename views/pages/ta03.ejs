<!DOCTYPE html>
<html>

<head>
  <% include ../includes/header.ejs %>
</head>

<body>
  <% include ../includes/nav.ejs %>
    <div class="jumbotron text-center">
      <div class="container">
        <h1>
          <%= title %>
        </h1>
        <p>This is the placeholder for Team Activity 03</p>
      </div>
    </div>
    <div class="container">
      <h1>Here are your results</h1>
        <% for(var i = 0; i<data.length; i++) { %>
          <% if (i % 3 == 0) { %> 
            <div class="card-deck"> 
          <% } %>    
            <div class="card">
              <img src="<%= data[i].imageUrl %>" class="card-image">
              <div class="card-body">
                <h2 class="card-title"><%= data[i].name %></h2>
                <h3 class="card-price"><%= data[i].price %></h3>
                <p  class="card-desc" ><%= data[i].description %></p>
              </div>
            </div>
          <% if (i % 3 == 2) { %>
            </div>
            <br>
          <% } %>
        <% } %>
    </div>
</body>
</html>